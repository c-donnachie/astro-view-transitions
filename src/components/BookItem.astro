---
export interface Props {
  id: string
  title: string
  img: string
}

const { id, title, img } = Astro.props
---

<a
  class="hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl"
  href={`/${id}`}>
  <img
    transition:name={`book-${id}`}
    class="aspect-[389/500] h-full w-full object-cover max-w-full rounded-lg"
    src={img}
    alt={`Portada del libro ${title}`}
  />
    <h3 
    transition:name={`${title}`}
    class="text-lg font-bold mt-2">{title}</h3>
</a>
